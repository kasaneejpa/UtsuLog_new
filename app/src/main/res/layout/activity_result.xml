<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tashino_akihiro.utsulog.ResultActivity"
    android:id="@+id/listRecords">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="うつ病の可能性は："
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/abc_text_size_body_1_material"
        android:password="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="可能性"
        android:id="@+id/txtJudge"
        android:textSize="@dimen/abc_text_size_body_1_material"
        android:textColor="#ffff292b"
        android:layout_below="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注意：この結果はWHO（世界保健機構）が作ったICD-10という診断ガイドを用いていますが。医師の面談による診察を代用するものではありません。すこしでも心の病気が気になったら専門医の診断を受けてください。"
        android:id="@+id/textView4"
        android:layout_below="@+id/txtJudge"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/ResultList"
        android:layout_marginTop="89dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="これまでの記録"
        android:id="@+id/textView8"
        android:textSize="@dimen/abc_text_size_body_1_material"
        android:textColor="#fffb59ff"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp" />

</RelativeLayout>
